<div class="jumbotron">
  <div class="container">
    <h1 class="display-4">All Song Reviews</h1><br>
    <p class="lead">FULL LIST: Just Click Search</p>
        <%= form_with url: songs_path, method: :get, local: true do |f| %>
        <%= f.text_field :artist_name %>
        <%= f.submit 'Search Artist' %>
<% end %>
  </div>
</div>
<br><br>
<div class="btn btn-secondary">
<%= link_to "Create a Review", new_song_path, :class => "btn" %>
</div>

<br><br>

<% @songs.each do |song|%>
    <%= link_to song.title, song_path(song) %> by <%= song.artist_name%><br>
<% end %>