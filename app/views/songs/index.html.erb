<div class="jumbotron">
<%# style="background-color:#" %>
  <div class="container">
    <h1 class="display-4">Song Reviews</h1><br>
    <p class="lead">Search W/ Blank Will Refresh Back to Full List</p>
        <%= form_with url: songs_path, method: :get, local: true do |f| %>
          <%= f.text_field :artist_name %>
          <%= f.submit 'Search Artist' %>
        <% end %> <br>
        <p>=================OR=================</p> 
        <p>Find Songs by Genre</p>
        <%= form_tag songs_path, method: :get do %>
          <%= select_tag "genre", options_from_collection_for_select(Song.all.to_a.uniq{|g| g.genre}, :genre, :genre) %>
          <%= submit_tag "Filter"%>
        <% end %>
  </div>
</div>

<div class="container">
<div class="btn btn-light">
<%= link_to "Start a Review", new_song_path, :class => "btn" %>
</div>

<br><br>
<ul class="list-group">
<% @songs.each do |song|%>
    <li class="list-group-item"><%= link_to song.title, song_path(song) %> by <%= song.artist_name%></li>
<% end %>
</ul>
</div>