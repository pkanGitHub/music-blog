<!DOCTYPE html>
<html>
  <head>
    <title>MusicBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<nav class="navbar navbar-expand-lg" style="background-color: #c4e8ff;>
  <a class="navbar-brand">MusicRev</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
    <% if user_signed_in? %>
      <li class="nav-link"><%= link_to "My Reviews", songs_path(my_songs: true), :class => "btn"  %></li>
      <ul class="navbar-nav ml-auto">
      <li class="nav-item"><%= button_to "Log Out", destroy_user_session_path, method: :delete %></li>
      </ul>
    <% end %>
</nav>
    <% flash.each do |type, msg| %>
      <div>
        <%= msg %>
      </div>
    <% end %>
    
    <%= yield %>
  </body>
</html>
